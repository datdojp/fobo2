<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000" >

    <LinearLayout
        android:id="@+id/layoutSubcategories"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/subcat_layout_background"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layoutSubcategories"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-15dp"
        android:layout_toRightOf="@+id/layoutSubcategories"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/but_close" />

</RelativeLayout>