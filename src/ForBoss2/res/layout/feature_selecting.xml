<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plain_background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitStart"
            android:src="@drawable/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/buttonBossMeasure"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_marginBottom="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/but_boss_measurer" />

            <ImageButton
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_marginBottom="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/but_news" />

            <ImageButton
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_marginBottom="25dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/but_leading_style" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>