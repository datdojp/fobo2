<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forboss"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:name="com.forboss.ForBossApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="com.forboss.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.forboss.RegistrationActivity"></activity>
        <activity android:name="com.forboss.FeatureSelectingActivity"></activity>
        <activity android:name="com.forboss.bossmeasure.BossMeasureActivity"></activity>
        <activity android:name="com.forboss.news.CategorySelectingActivity"></activity>
        <activity android:name="com.forboss.news.FlippingArticleListByCategoryActivity"></activity>
    </application>

</manifest>